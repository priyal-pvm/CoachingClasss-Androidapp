<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blueback"
    android:backgroundTintMode="screen"
    android:backgroundTint="#74B2CAB6"
    tools:context=".AddStudent">


    <ScrollView
        android:layout_width="match_parent"
        android:background="#4666877B"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="15dp">

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            app:counterTextColor="@color/black"
            android:background="#BC62B6AF"
            app:hintTextColor="@color/black"

            android:layout_height="wrap_content"
            android:layout_marginTop="26dp">

            <com.google.android.material.textfield.TextInputEditText
                 android:background="#BC62B6AF"
android:textColorHint="@color/black"
                android:textColor="@color/white"
                android:id="@+id/addStudentName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Name"
                android:inputType="text"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:counterTextColor="@color/black"
            android:background="#BC62B6AF"
            app:hintTextColor="@color/black"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/addStudentRollno"
                 android:background="#BC62B6AF"
                android:textColorHint="@color/black"

                android:textColor="@color/white"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Roll Number"
                android:inputType="number"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:counterTextColor="@color/black"
            android:background="#BC62B6AF"
            app:hintTextColor="@color/black"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:passwordToggleEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/addStudentPass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                 android:background="#BC62B6AF"
                android:textColorHint="@color/black"
                android:textColor="@color/white"


                android:hint="Passwod"
                android:inputType="textPassword"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:counterTextColor="@color/black"
            android:background="#BC62B6AF"
            app:hintTextColor="@color/black"

            android:layout_marginTop="16dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/addStudentEmail"

                android:layout_width="match_parent"
                android:background="#BC62B6AF"
                android:textColorHint="@color/black"

                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:hint="Email ID"
                android:inputType="textEmailAddress"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            app:hintEnabled="true"
            app:counterTextColor="@color/black"
            android:background="#BC62B6AF"
            app:hintTextColor="@color/black"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/addStudentPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="10"
                android:textColor="@color/white"
                android:textColorHint="@color/black"
                android:hint="Phone No."

                android:background="#BC62B6AF"
                android:inputType="number"/>
        </com.google.android.material.textfield.TextInputLayout>

        <Spinner
            android:id="@+id/AddStudentClass"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:spinnerMode="dropdown"
            android:background="@android:drawable/btn_dropdown"
            android:gravity="center"

            android:layout_marginVertical="16dp"/>

        <Spinner

            android:id="@+id/AddStudentBatch"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginVertical="1dp"
            android:background="@android:drawable/btn_dropdown"
            android:gravity="center"


            android:spinnerMode="dropdown" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/addStudentButton"

            android:backgroundTint="@color/design_default_color_secondary"
            android:textColor="#000000"
            android:layout_gravity="center"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Add Student"
            app:backgroundTint="@color/logoclr" />


    </LinearLayout>
    </ScrollView>
</LinearLayout>