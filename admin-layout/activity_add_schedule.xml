<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UploadNotice"
    android:background="@color/white"
>


    <LinearLayout

        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="130dp"
            android:layout_height="150dp"
            android:layout_margin="10dp"
            android:background="@color/white"

            android:id="@+id/schedule_image"
            android:layout_gravity="center"
            app:cardElevation="5dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="@color/white"

                android:orientation="vertical">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:background="@drawable/circle_logoclr"
                    android:src="@drawable/icon_schedule"
                    android:padding="15dp"
                    app:tint="@color/white"
                    android:contentDescription="notice icon" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/black"
                    android:layout_marginTop="10dp">
                </View>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add image"
                    android:textStyle="bold"
                    android:padding="5dp"
                    android:textColor="@color/black"
                    android:textSize="17dp"
                    android:layout_marginTop="10dp">
                </TextView>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp"
            android:textColorHint="#154EDF"
            android:background="#6AA0DACC"

            app:counterTextColor="@color/black">

            <com.google.android.material.textfield.TextInputEditText

                android:id="@+id/ScheduleTitle"

                android:textStyle="bold"
                android:background="#6AA0DACC"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Schedule Title" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/schedule_btn"
            android:layout_width="190dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_height="45dp"
            android:layout_marginTop="16dp"
            android:text="Upload Timetable"
            android:backgroundTint="@color/design_default_color_secondary"
            />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_marginTop="16dp">

            <ImageView
                android:id="@+id/Schedulepreview"
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

</ScrollView>